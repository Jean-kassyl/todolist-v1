<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>todo list</title>
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
    <div class="view">
        
        <div>
            <form action="" class="cat-form">
                <input type="text" name="category" placeholder="create a specific category">
                <button class="cat-btn">ok</button>
            </form>
        </div>
        <div class="todo-bloc">
            <h1> <%= title === 'home'? date: title %></h1>
    
            <ul>
                <% if(todos.length > 0){  %>
                    <% todos.forEach( todo => {  %> 
                        <li class="item">
                            <input type="radio">
                            <span><%= todo.content %></span>
                            <span class="trash">&#128465;</span>
                        </li>
                    <% }) %>  
                <% } else { %>
                    <li class="item">No todos at the moment</li>
                <% } %>
            </ul>
    
            <form  action= <%= title === 'home'? '/': '/' + title %> method="post">
                <input type="text" name="newTodo" placeholder="add a new todo" autocomplete="off"> 
                <button class="btn">&#43;</button>
            </form>
        </div>
    
    </div>
    <div class="aside">
        <h3>My specific list of todos</h3>
        <ul class="categories">
            <li><span class="cat-text">make food to my children</span><span class="del">&#10005;</span></li>
            <li>go to the gym</li>
            <li>run a 100 miles</li>
        </ul>
    </div>

    <script src="js/main.js">
    </script>
</body>
</html>